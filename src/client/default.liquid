<!doctype html>
<html>
  <head>
    <title>Notes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% capture css %}
      {% include 'reset.css' %}
      {% include 'notes.css' %}
      {% include 'theme-dark.css' %}
      {% include 'atom-one-dark.css' %}
    {% endcapture %}
    <style>
      {{ css | cssmin }}
    </style>
  </head>
  <body>
    <div class="content">
      {{content}}
    </div>
    <theme-switcher>
      <p>🌝</p>
    </theme-switcher>
    <style>
      theme-switcher {
        position: absolute;
        top: 0;
        right: 0;
        padding: 1em;
      }
      theme-switcher p {
        font: inherit;
        display: block;
        margin: 0;
        font-size: 2em;
      }
    </style>
    <script>
      {{ js }}
    </script>
  </body>
</html>
